[Unit]
Description=energy pulse meter
After=network.target rrdcached.service

[Service]
Type=simple
EnvironmentFile=/scratch/git/pulse/resources/pulse_defs.conf
ExecStart=/scratch/git/pulse/pulse --device ${SERIAL_DEVICE} --file ${RRD_FILE} --address ${RRDCACHED_ADDRESS} --pvoutput --api-key ${PVOUTPUT_API_KEY} --sys-id ${PVOUTPUT_SYSTEM_ID}
User=pulse
Group=pulse

[Install]
WantedBy=multi-user.target
